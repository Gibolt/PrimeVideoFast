{
	"manifest_version": 2,
	"name": "__MSG_extension_name__",
	"description": "__MSG_extension_description__",
	"version": "1.0.0",
	"default_locale": "en",
	"icons": {
		"16": "img/temp_icon.png",
		"128": "img/temp_icon.png"
	},
	"browser_action": {
		"default_title": "__MSG_extension_name__",
		"default_icon": "img/temp_icon.png",
		"default_popup": "popup.html"
	},
	"content_scripts": [
		{
			"matches": [
				"https://*.amazon.com/*",
				"https://*.amazon.at/*",
				"https://*.amazon.ca/*",
				"https://*.amazon.cn/*",
				"https://*.amazon.co.jp/*",
				"https://*.amazon.co.uk/*",
				"https://*.amazon.com.au/*",
				"https://*.amazon.com.br/*",
				"https://*.amazon.com.mx/*",
				"https://*.amazon.com.nl/*",
				"https://*.amazon.de/*",
				"https://*.amazon.es/*",
				"https://*.amazon.fr/*",
				"https://*.amazon.in/*",
				"https://*.amazon.it/*",
				"https://*.primevideo.com/*"
			],
			"all_frames" : false,
			"css": [
				"css/base.css"
			],
			"js": [
				"constants.js",
				"chromeMessages.js",
				"htmlElements.js",
				"settings.js",
				"playbackSpeed.js",
				"ratings.js"
			]
		}
	],
	"background": {
		"persistent": true,

		"scripts": [
			"constants.js",
			"chromeMessages.js",
			"settings.js"
		]
	},
	"permissions": [
		"storage",
		"tabs"
	],
	"web_accessible_resources": [
		"*.png",
		"*.webp",
		"*.jpg"
	]
}
